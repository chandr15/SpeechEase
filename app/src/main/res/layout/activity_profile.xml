<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_centerInParent="true"
    android:layout_height="match_parent"
    tools:context=".profile_activity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_one"
            android:orientation="horizontal">


            <RelativeLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"

                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp">

                <Button
                    android:id="@+id/upda_prof_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card1"
                    android:layout_centerInParent="true"
                    android:text="@string/update"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/title_001"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="@string/profile"
                    android:textAlignment="center"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:cardCornerRadius="10dp"
                    android:id="@+id/card1"
                    android:elevation="8dp"
android:layout_below="@id/title_001"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardElevation="6dp">
                    <LinearLayout
                        android:weightSum="2"

                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:fontFamily="@font/montserrat"
                            android:paddingHorizontal="20dp"
                            android:paddingVertical="12dp">



                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/name_title"
                                    android:gravity="center|start"
                                    android:fontFamily="@font/montserrat"
                                    android:textColor="#000"
                                    android:text="@string/name"
                                    android:textStyle="bold"
                                    android:textSize="18sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/name_title"
                                android:gravity="center|start"
                                android:id="@+id/name_profile"
                                android:fontFamily="@font/montserrat"
                                android:textColor="#000"
                                android:text=""

                                android:textSize="18sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/email_title"
                                android:layout_below="@+id/name_profile"
                                android:gravity="center|start"
                                android:fontFamily="@font/montserrat"
                                android:textColor="#000"
                                android:text="@string/emailid"
                                android:textStyle="bold"
                                android:textSize="18sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/email_title"
                                android:gravity="center|start"
                                android:id="@+id/email_profile"
                                android:fontFamily="@font/montserrat"
                                android:textColor="#000"
                                android:text=""

                                android:textSize="18sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:id="@+id/contact"
                                android:layout_below="@+id/email_profile"
                                android:gravity="center|start"
                                android:fontFamily="@font/montserrat"
                                android:textColor="#000"
                                android:text="@string/contact_number"
                                android:textStyle="bold"
                                android:textSize="18sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_below="@id/contact"
                                android:gravity="center|start"
                                android:id="@+id/conta"
                                android:fontFamily="@font/montserrat"
                                android:textColor="#000"
                                android:text=""

                                android:textSize="18sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/gender_title"
                                android:gravity="center|start"
                                android:layout_below="@id/conta"
                                android:fontFamily="@font/montserrat"
                                android:textColor="#000"
                                android:text="@string/gender"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:visibility="gone"/>
                            <Spinner
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:layout_below="@id/gender_title"
                                android:spinnerMode="dropdown"
                                android:id="@+id/spinner_languages"
                                android:visibility="gone"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/cTTSText"
                                android:gravity="center|start"
                                android:layout_below="@id/spinner_languages"
                                android:fontFamily="@font/montserrat"
                                android:textColor="#000"
                                android:text="@string/ttsSettings"
                                android:textStyle="bold"
                                android:textSize="18sp"/>
                            <Button
                                android:id="@+id/change_tts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/cTTSText"

                                android:text="@string/click" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:id="@+id/info1"
                                android:layout_toEndOf="@id/change_tts"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_below="@id/cTTSText"
                                android:src="@drawable/baseline_info_24"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/cvText"
                                android:layout_below="@+id/change_tts"
                                android:gravity="center|start"
                                android:fontFamily="@font/montserrat"
                                android:textColor="#000"
                                android:text="@string/changev"
                                android:textStyle="bold"
                                android:textSize="18sp" />
                            <Button
                            android:id="@+id/change_voice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/cvText"

                            android:text="@string/click" />


                            <ImageView
                                android:layout_width="wrap_content"
                                android:id="@+id/info2"
                                android:layout_toEndOf="@id/change_tts"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_below="@id/cvText"
                                android:src="@drawable/baseline_info_24"/>




                        </RelativeLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>








            </RelativeLayout>


        </LinearLayout>



</RelativeLayout>